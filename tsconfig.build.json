{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "sourceMap": false,
    "removeComments": true,
    "noEmit": true,
    "declaration": false,
    "declarationMap": false,
    "incremental": false
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.stories.tsx",
    "**/*.test.tsx",
    "**/__tests__/**",
    "**/__mocks__/**",
    "jest.config.js",
    "jest.setup.js"
  ]
} 