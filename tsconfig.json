{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/*"]
    },
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "jsxImportSource": "react",
    "typeRoots": [
      "./node_modules/@types",
      "./src/core/types"
    ]
  },
  "include": ["src/**/*", "vite.config.ts", "src/core/types/*.d.ts"],
  "exclude": ["node_modules"]
} 